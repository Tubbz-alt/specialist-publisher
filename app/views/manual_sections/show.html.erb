  <li><%= link_to @section.manual.title, manual_path(content_id: @section.manual.content_id) %></li>
  <li class='active'><%= @section.title %></li>
<% end %>

<h1 class="page-header">
  <%= @section.title %>
</h1>

<div class="row">
