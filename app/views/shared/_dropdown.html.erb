<%= render "shared/form_group", f: f, field: field do %>
  <%= f.select field,
      local_assigns.fetch(:options, facet_options(f, field)),
      {},
      {
        class: "select2 form-control select-all-disabled",
        multiple: local_assigns[:multiple] || false,
        data:
        {
          placeholder: "Select #{field.to_s.humanize(capitalize: false)}"
        }
      }
  %>
<% end %>
