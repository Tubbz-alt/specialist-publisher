<%= render layout: "shared/form_group", locals: { f: f, field: :decision_subject } do %>
  <%= f.select :decision_subject, facet_options(f, :decision_subject), {}, { class: 'form-control' } %>
<% end %>

<%= render "shared/form_group", f: f, field: :regions do %>
  <%= f.select :regions,
      facet_options(f, :regions),
      {},
      {
        class: 'select2 form-control',
        multiple: true,
        data:
        {
          placeholder: 'Select regions'
        }
      }
  %>
<% end %>

<%= render layout: "shared/form_group", locals: { f: f, field: :case_type } do %>
