<% end %>

<%= render layout: "shared/form_group", locals: { f: f, field: :outcome_type } do %>
  <%= f.select :outcome_type,
      facet_options(f, :outcome_type),
      {
        include_blank: true
      },
      {
        class: 'form-control'
      }
  %>
<% end %>

